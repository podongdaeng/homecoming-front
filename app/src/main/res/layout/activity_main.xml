<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/settings_description"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        android:visibility="visible"
        tools:visibility="visible" />
    <!--android:background="@drawable/image_with_border" -->
    <ImageButton
        android:id="@+id/informationButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/loud_speaker_description"
        android:scaleType="centerInside"
        android:src="@drawable/fxemoji_loudspeaker"
        android:visibility="visible"
        tools:visibility="visible" />

    <!--android:background="@drawable/image_with_border" -->
    <ImageButton
        android:id="@+id/reportButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/talk"
        android:visibility="visible"
        tools:srcCompat="@drawable/talk"
        tools:visibility="visible"
        android:contentDescription="@string/talk_description" />

    <!--android:background="@drawable/image_with_border" -->
    <ImageButton
        android:id="@+id/imageButton_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/location"
        android:visibility="visible"
        tools:srcCompat="@drawable/location"
        tools:visibility="visible"
        android:contentDescription="@string/location_description" />


    <!--android:background="@drawable/image_with_border" -->
</RelativeLayout>

    <!--android:background="@android:color/transparent" 사용하여 webview와 조화롭게 버튼 올려놓았습니다-->